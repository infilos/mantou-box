    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
            <resource>
                <directory>${project.build.sourceDirectory}</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>${project.basedir}/src/main/resources/config</directory>
                <filtering>true</filtering>
                <targetPath>${project.build.directory}/config</targetPath>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <fork>true</fork>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>0.0.8</version>
                <configuration>
                    <mainClass>${main.class}</mainClass>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.gluonhq</groupId>
                <artifactId>gluonfx-maven-plugin</artifactId>
                <version>1.0.12</version>
                <configuration>
                    <mainClass>${main.class}</mainClass>
                    <target>${gluonfx.target}</target>
                    <reflectionList>
                        <list>com.infilos.mantou.views.convert.ConvertModule</list>
                        <list>com.infilos.mantou.views.convert.ConvertView</list>
                        <list>com.infilos.mantou.views.convert.basex.BaseXView</list>
                        <list>com.infilos.mantou.views.convert.md5text.MD5TextView</list>
                        <list>com.infilos.mantou.views.convert.md5file.MD5FileView</list>
                        <list>com.infilos.mantou.views.datetime.DatetimeModule</list>
                        <list>com.infilos.mantou.views.datetime.DatetimeView</list>
                        <list>com.infilos.mantou.views.datetime.parser.DatetimeParserView</list>
                        <list>com.infilos.mantou.views.datetime.converter.TimestampConverterView</list>
                        <list>com.infilos.mantou.views.textgen.TextGenModule</list>
                        <list>com.infilos.mantou.views.textgen.TextGenView</list>
                        <list>com.infilos.mantou.views.textgen.uuid.UUIDGeneratorView</list>
                        <list>com.infilos.mantou.views.textgen.password.PasswordGeneratorView</list>
<!--                        <list>com.infilos.mantou.views.setting.SettingModule</list>-->
<!--                        <list>com.infilos.mantou.views.setting.SettingView</list>-->
<!--                        <list>com.infilos.mantou.views.setting.h2.H2View</list>-->
                    </reflectionList>
<!--                    <graalvmHome>-->
<!--                        /Users/luoning/.sdkman/candidates/java/22.0.0.2.r17-grl-->
<!--                    </graalvmHome>-->
                    <nativeImageArgs>
                        <arg>--allow-incomplete-classpath</arg>
                    </nativeImageArgs>
                    <releaseConfiguration>
                        <vendor>infilos</vendor>
                        <bundleName>MantouBox</bundleName>
                        <description>MantouBox</description>
                        <bundleVersion>1.0</bundleVersion>
                        <bundleShortVersion>1.0</bundleShortVersion>
                        <skipSigning>true</skipSigning>
                        <packageType>${package.type}</packageType>
                    </releaseConfiguration>
                </configuration>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-clean-plugin</artifactId>
